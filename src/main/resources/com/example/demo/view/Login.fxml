<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.demo.controller.LoginController"
           stylesheets="@../style/style.css"
           styleClass="login-container">

    <VBox styleClass="login-card" spacing="15" alignment="CENTER">
        
        <!-- Logo -->
        <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
            <image>
                <Image url="@../picture/logo.png"/>
            </image>
        </ImageView>

        <!-- Title -->
        <Label text="Hệ thống quản lý kho thiết bị y tế" styleClass="login-title" wrapText="true" textAlignment="CENTER"/>

        <!-- Username Field -->
        <VBox spacing="5" maxWidth="300">
            <Label text="Tên đăng nhập" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" maxWidth="300"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5" maxWidth="300">
            <Label text="Mật khẩu" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <StackPane maxWidth="300">
                <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu" maxWidth="300"/>
                <TextField fx:id="passwordTextField" promptText="Nhập mật khẩu" maxWidth="300" visible="false" managed="false"/>
            </StackPane>
        </VBox>

        <!-- Options: Show Password & Forgot Password -->
        <HBox alignment="CENTER_LEFT" spacing="10" maxWidth="300">
            <CheckBox fx:id="showPasswordCheckBox" text="Hiển thị mật khẩu" onAction="#onShowPasswordChanged"/>
            <Region HBox.hgrow="ALWAYS" />
            <Hyperlink fx:id="forgotPasswordLink" text="Quên mật khẩu?" onAction="#onForgotPasswordClicked"/>
        </HBox>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="ĐĂNG NHẬP" onAction="#onLoginClicked" maxWidth="300" styleClass="primary-button" defaultButton="true"/>

        <!-- Database Viewer Button (Debug) -->
        <Button text="Xem Database" onAction="#onOpenDatabaseViewer" maxWidth="300" style="-fx-background-color: transparent; -fx-text-fill: #999; -fx-underline: true; -fx-cursor: hand;"/>

    </VBox>

</StackPane>