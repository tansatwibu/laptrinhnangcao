<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ReduceAssetDialogController" stylesheets="@../style/style.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Giảm tài sản" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Mã tài sản:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="assetIdField" promptText="Nhập mã tài sản" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Số lượng giảm:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="quantityField" promptText="Nhập số lượng giảm" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Lý do:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextArea fx:id="reasonArea" promptText="Nhập lý do giảm tài sản" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Xác nhận" onAction="#handleReduceAsset" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Button text="Hủy" onAction="#handleCancel" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>
</VBox>